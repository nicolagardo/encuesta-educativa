<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Iniciar Sesion</h3>
                </div>
                <img src="/images/image/iconoLogo.png" class="mx-auto w-25">
                <div class="card-body">
                     {{#if errors }}
                    {{#each errors }}
                    <p class="alert alert-danger">{{ this.msg }}</p>
                    {{/each}}
                    {{/if}}
                    <form action="/signin" method="POST" class="needs-validation" novalidate>
                        <div class="form-group">
                            <input type="email" name="email" placeholder="Email" class="form-control" value="{{data.email}}" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control" required>
                        </div>
                        <button class="btn btn-primary btn-block">
                            Inicio de Sesion
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>