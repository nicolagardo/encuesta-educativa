<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="card" style="width: 21rem;">
                <div class="card-header">
                    <h4 id="title">{{data.poll}}</h4>
                </div>
                <div class="card-body">
                    <div class="col-md-10">
                        <div class="row">
                            <p>{{data.responses}}</p>
                            &nbsp;
                            <p>Respuestas</p>
                        </div>
                        <div class="row">
                            <p>{{votes}}</p>
                            &nbsp;
                            <p>Votos</p>
                        </div>
                        <div class="row">
                            <a class="btn btn-info" href="/votes?id={{data.id}}&poll={{data.poll}}">
                                Realizar votos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card">
                <button>Grafico Histograma</button>
                <div class="card-body" id="top_x_div">

                </div>

            </div>
            <div class="card">
                <button>Grafico de Torta 3D</button>
                <div id="piechart_3d" style="width: 500px; height: 300px;"></div>

            </div>
            <div class="card">
                <button>Grafico de dona</button>
                <div id="donutchart" style="width: 500px; height: 300px;"></div>

            </div>
            

        </div>
    </div>
</div>


