<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Crear encuesta</h3>
                </div>
                <div class="card-body">
                    <form action="/createPoll" method="POST" class="needs-validation" novalidate>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="text" name="poll" placeholder="Titulo de la encuesta" class="form-control"
                                    autofocus required />
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="button" id="add_field" class="btn btn-info" value="Respuestas">
                        </div>
                        <div class="form-group">
                            <div id="listas">
                                <div class="row">
                                    <div class="col-md-10">
                                        <input type="text" name="response" placeholder="Respuesta 1" class="form-control input" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Crear" class="btn btn-success btn-block">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>